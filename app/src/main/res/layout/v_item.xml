<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cv"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tanggal"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_below="@id/tanggal"
                android:id="@+id/gambar"
                android:src="@drawable/default_thumbnail"
                android:contentDescription="acara"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gambar"
                android:layout_toEndOf="@id/gambar"
                android:id="@+id/judul"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_alignTop="@id/gambar"
                android:textAppearance="?android:textAppearanceMedium"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/gambar"
                android:layout_below="@id/judul"
                android:layout_alignLeft="@id/judul"
                android:layout_alignStart="@id/judul"
                android:textAppearance="?android:textAppearanceSmall"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/deskripsi"/>




        </RelativeLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>